{
  "collectCoverageFrom": [
    "**/src/**/*.js",
    "**/config/**/*.js"
],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "testMatch": ["<rootDir>/**/?(*.)spec.js"],
  "testEnvironment": "node",
  "testURL": "http://localhost",
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "transformIgnorePatterns": ["node_modules/(?!@immowelt)"],
  "moduleFileExtensions": ["js", "json"],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/build/",
    "/coverage/",
    "/dist/",
    "/bin/"
  ]
}
